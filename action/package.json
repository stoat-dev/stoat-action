{
  "name": "stoat-action",
  "version": "0.0.14",
  "private": false,
  "description": "Supercharge your CI / CD pipelines",
  "main": "src/app.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{ts,js,json}'",
    "format-check": "prettier --check '**/*.{ts,js,json}'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --coverage",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "prepare": "cd .. && husky install action/.husky",
    "script": "npx ts-node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoat-dev/stoat-action.git"
  },
  "keywords": [
    "actions",
    "ci",
    "cd",
    "github",
    "stoat"
  ],
  "author": "Stoat Dev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.1",
    "ajv": "^8.17.1",
    "bluebird": "^3.7.2",
    "cross-env": "^10.1.0",
    "cross-fetch": "^4.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "form-data": "^4.0.5",
    "handlebars": "^4.7.8",
    "jimp": "^1.6.0",
    "lodash": "^4.17.21",
    "mime-types": "^3.0.2",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@octokit/openapi-types": "^27.0.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bluebird": "^3.5.42",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.17.21",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^24.10.1",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^8.56.0\n",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.2.1",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.3",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "utility-types": "^3.11.0"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write"
    ]
  }
}
