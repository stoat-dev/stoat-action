{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "integer"
    },
    "enabled": {
      "type": "boolean"
    },
    "comment_template_file": {
      "type": "string"
    },
    "plugins": {
      "type": "object",
      "properties": {
        "static_hosting": {
          "$ref": "#/definitions/static_hosting_plugin_rendered_map"
        },
        "json": {
          "$ref": "#/definitions/json_plugin_rendered_map"
        },
        "job_runtime": {
          "$ref": "#/definitions/job_runtime_plugin_rendered"
        }
      }
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "views": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "plugins": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "static_hosting": {
              "type": "object",
              "required": ["github"],
              "additionalProperties": true,
              "properties": {
                "github": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["table"],
                  "properties": {
                    "table": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "static_hosting_plugin_rendered_map": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/static_hosting_plugin_rendered"
      }
    },
    "static_hosting_plugin_rendered": {
      "type": "object",
      "required": ["path", "link", "sha", "status"],
      "properties": {
        "metadata": {
          "type": "object",
          "additionalProperties": true
        },
        "path": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "sha": {
          "type": "string"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "json_plugin_rendered_map": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/json_plugin_rendered"
      }
    },
    "json_plugin_rendered": {
      "type": "object",
      "required": ["path", "value"],
      "properties": {
        "metadata": {
          "type": "object",
          "additionalProperties": true
        },
        "path": {
          "type": "string"
        },
        "value": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "job_runtime_plugin_rendered": {
      "type": "object",
      "required": ["width", "height", "runtime"],
      "properties": {
        "width": {
          "type": "integer"
        },
        "height": {
          "type": "integer"
        },
        "runtime": {
          "type": "array",
          "item": {
            "type": "object",
            "additionalProperties": true,
            "required": ["workflow", "job", "sha", "runtime_seconds"],
            "properties": {
              "workflow": {
                "type": "string"
              },
              "job": {
                "type": "string"
              },
              "sha": {
                "type": "string"
              },
              "runtime_seconds": {
                "type": "number"
              }
            }
          }
        }
      }
    }
  }
}
