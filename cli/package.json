{
  "name": "stoat",
  "version": "0.0.4",
  "description": "Stoat CLI",
  "main": "src/index.ts",
  "bin": {
    "stoat": "./dist/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "format": "prettier --write '**/*.{ts,json}'",
    "format-check": "prettier --check '**/*.{ts,json}'",
    "lint": "eslint src/**/*.ts",
    "create": "npm run build && npm run test",
    "build": "ncc build --source-map --license licenses.txt",
    "local": "yarn build && npm i -g",
    "test": "jest --coverage",
    "prepare": "cd .. && husky install action/.husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoat-dev/stoat-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "ci",
    "cd"
  ],
  "author": "Stoat Dev",
  "license": "MIT",
  "dependencies": {
    "@stoplight/yaml": "^4.2.3",
    "@types/express": "^4.17.14",
    "@types/inquirer": "^9.0.3",
    "@vercel/ncc": "^0.34.0",
    "chalk": "^4.1.2",
    "commander": "^9.4.1",
    "compare-versions": "^5.0.1",
    "cross-env": "^7.0.3",
    "deepmerge-ts": "^4.2.2",
    "esbuild": "^0.15.16",
    "express": "^4.18.2",
    "inquirer": "^9.1.4",
    "latest-version": "^7.0.0",
    "marked": "^4.2.3",
    "open": "^8.4.0",
    "path": "^0.12.7",
    "portfinder": "^1.0.32",
    "prettier": "2.7.1",
    "stoat-action": "*"
  },
  "devDependencies": {
    "@types/marked": "^4.0.7",
    "@types/node": "^18.11.10",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write"
    ]
  }
}
