{
  "name": "stoat-action",
  "version": "0.0.1",
  "private": false,
  "description": "Supercharge your CI / CD pipelines",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.{ts,json}'",
    "format-check": "prettier --check '**/*.{ts,json}'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoat-dev/stoat.git"
  },
  "keywords": [
    "github",
    "actions",
    "ci",
    "cd"
  ],
  "author": "Stoat Dev",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "husky": "^8.0.2",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  },
  "lint-staged": {
    "*.{ts,json}": [
      "npm run format"
    ]
  }
}
