{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "updated_at"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "integer"
    },
    "enabled": {
      "type": "boolean"
    },
    "comment_template_file": {
      "type": "string"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "plugins": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "required": ["static_hosting"],
            "properties": {
              "metadata": {
                "type": "object",
                "additionalProperties": true
              },
              "static_hosting": {
                "type": "object",
                "required": ["path", "link", "sha", "status"],
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "link": {
                    "type": "string"
                  },
                  "sha": {
                    "type": "string"
                  },
                  "status": {
                    "type": "string"
                  }
                }
              }
            }
          },
          {
            "type": "object",
            "required": ["json"],
            "properties": {
              "metadata": {
                "type": "object",
                "additionalProperties": true
              },
              "json": {
                "type": "object",
                "required": ["path", "value"],
                "properties": {
                  "path": {
                    "type": "string"
                  },
                  "value": {
                    "type": "object",
                    "additionalProperties": true
                  }
                }
              }
            }
          }
        ]
      }
    },
    "views": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "plugins": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "static_hosting": {
              "type": "object",
              "required": ["github"],
              "additionalProperties": true,
              "properties": {
                "github": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["table"],
                  "properties": {
                    "table": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
