{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "updated_at"],
  "additionalProperties": true,
  "properties": {
    "version": {
      "type": "integer"
    },
    "enabled": {
      "type": "boolean"
    },
    "comment_template_file": {
      "type": "string"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "tasks": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "oneOf": [
          { "$ref": "src/schemas/pluginTypes.json#/definitions/static_hosting_plugin_rendered" },
          { "$ref": "src/schemas/pluginTypes.json#/definitions/json_plugin_rendered" },
          { "$ref": "src/schemas/pluginTypes.json#/definitions/job_runtime_plugin_rendered" }
        ]
      }
    },
    "views": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "plugins": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "static_hosting": {
              "type": "object",
              "required": ["github"],
              "additionalProperties": true,
              "properties": {
                "github": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["table"],
                  "properties": {
                    "table": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
