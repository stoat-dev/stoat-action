{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "references": [
    { "path": "./action"},
    { "path": "./cli" }
  ],
  "exclude": ["docs", "**/coverage", "**/dist", "**/action/lib", "**/cli/lib", "**/jest.config.js", "**/*.test.ts"]
}
